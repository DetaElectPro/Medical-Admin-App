<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/sponsors_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="3dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/order_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Order Information"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_medical_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_info"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Medical Name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/medical_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_medical_name"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Medical Name"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_medical_name_specialties"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/medical_name"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Medical Speciality"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/medical_name_specialties"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_medical_name_specialties"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Medical Speciality"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/medical_name_specialties"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Address"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_address"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:maxLines="2"
                    android:text="Address"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Start Time"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_start_time"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Start Time"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/tv_start_time"
                    android:layout_toRightOf="@+id/tv_start_time"
                    android:gravity="end"
                    android:text="End Time"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_end_time"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/start_time"
                    android:layout_toRightOf="@+id/start_time"
                    android:gravity="end"
                    android:text="End Time"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/start_time"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Price"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_price"
                    android:layout_margin="5dp"
                    android:text="Price"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:ignore="RtlHardcoded" />

                <!--<TextView-->
                <!--android:id="@+id/tv_cv"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/price"-->
                <!--android:layout_marginStart="5dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:text="CV"-->
                <!--android:textColor="@color/colorPrimary"-->
                <!--android:textSize="16sp"-->
                <!--android:textStyle="bold" />-->

                <!--<TextView-->
                <!--android:id="@+id/cv"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/tv_cv"-->
                <!--android:layout_margin="5dp"-->
                <!--android:drawableStart="@drawable/ic_insert_drive_file_light_blue_700_36dp"-->
                <!--android:text="Open User's CV"-->
                <!--android:textSize="16sp"-->
                <!--android:padding="10dp"-->
                <!--android:textStyle="bold" />-->


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view"
            android:layout_marginTop="20dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="3dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="User Information"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_request_admin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_info"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="User Name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/request_admin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_request_admin_name"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="User Name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_request_admin_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/request_admin_name"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Phone"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/request_admin_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_request_admin_phone"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Phone"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_user_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/request_admin_phone"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Address"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_user_address"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:maxLines="2"
                    android:text="Address"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_job_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_address"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Job Title"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/job_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_job_title"
                    android:layout_margin="5dp"
                    android:text="Job Title"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/tv_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/job_title"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Field"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_field"
                    android:layout_margin="5dp"
                    android:text="Field"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/tv_registration_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/field"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Registration Number"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/registration_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_registration_number"
                    android:layout_margin="5dp"
                    android:text="Registration Number"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/tv_graduation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/registration_number"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Graduation Date"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/graduation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_graduation_date"
                    android:layout_margin="5dp"
                    android:text="Graduation Date"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/tv_years_of_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/graduation_date"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Years of Experience"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/years_of_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_years_of_experience"
                    android:layout_margin="5dp"
                    android:text="Years of Experience"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/tv_pdfCV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/years_of_experience"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="CV"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_pdfCV"
                    android:layout_margin="5dp"
                    android:drawableStart="@drawable/ic_insert_drive_file_light_blue_700_36dp"
                    android:padding="10dp"
                    android:text="Open User's CV"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/accept_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view2"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="43dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_corner"
            android:text="Accept Request"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/cancel_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/accept_request"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="43dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_corner2"
            android:text="Cancel Request"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </RelativeLayout>
</ScrollView>