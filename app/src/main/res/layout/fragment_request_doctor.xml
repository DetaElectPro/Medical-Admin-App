<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    tools:context="com.hostpital.hospitaladmin.Fragments.RequestDoctorFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/doctorFragment_text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:fontFamily="@font/font_medium"
                android:text="Start Your Request"
                android:textColor="@color/text_color"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/doctorFragment_keyword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/home_background_file"
                android:drawableLeft="@drawable/ic_keyboard"
                android:drawablePadding="10dp"
                android:fontFamily="@font/font_medium"
                android:hint="Hospital Name"
                android:imeActionLabel="Next"
                android:imeOptions="actionUnspecified"
                android:padding="8dp"
                android:textColorHint="#7c7c7c"
                android:textSize="15sp" />

            <!--<com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinnerPart"
                android:layout_width="match_parent"
                android:layout_height="40dp" />-->

            <androidx.cardview.widget.CardView
                android:id="@+id/doctorFragment_catagoryView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_background_file">

                <LinearLayout
                    android:id="@+id/doctorFragment_linear_category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/doctorFragment_catagory"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_briefcase" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:fontFamily="@font/font_medium"
                        android:gravity="start|center"
                        android:text="Category:"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Spinner
                            android:id="@+id/doctorFragment_category_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="5dp">

                        </Spinner>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.6dp"
                android:background="@drawable/home_background_file">

                <LinearLayout
                    android:id="@+id/ui_layout_subcategory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/doctorFragment_subcatagory"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_briefcase" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:fontFamily="@font/font_medium"
                        android:gravity="start|center"
                        android:text="Sub Category:"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Spinner
                            android:id="@+id/doctorFragment_subcategory_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/doctorFragment_price"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@drawable/home_background_file"
                android:drawableStart="@drawable/ic_keyboard"
                android:drawablePadding="10dp"
                android:fontFamily="@font/font_medium"
                android:hint="Price per Hour"
                android:imeActionLabel="Next"
                android:imeOptions="actionUnspecified"
                android:padding="8dp"
                android:textColorHint="#7c7c7c"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/doctorFragment_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@drawable/home_background_file"
                android:drawableStart="@drawable/ic_gps_fixed_24dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/font_medium"
                android:gravity="top|start"
                android:hint="Enter Your Full Address"
                android:imeActionLabel="Next"
                android:imeOptions="actionUnspecified"
                android:inputType="textMultiLine"
                android:lines="4"
                android:padding="8dp"
                android:scrollbars="vertical"
                android:textColorHint="#7c7c7c"
                android:textSize="15sp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/getLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@drawable/round_border_primary"
                android:drawableStart="@drawable/ic_gps_fixed_24dp"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingTop="4dp"
                android:paddingRight="12dp"
                android:paddingBottom="4dp"
                android:text="Address via Map"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="4dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/doctorFragment_startDate"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_grey"
                    android:focusable="false"
                    android:hint="Start Date"
                    android:inputType="date"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"/>

                <EditText
                    android:id="@+id/doctorFragment_endtDate"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="2dp"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_grey"
                    android:focusable="false"
                    android:hint="End Date"
                    android:inputType="date"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"/>

            </LinearLayout>

            <EditText
                android:id="@+id/hours"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_grey"
                android:hint="Hours"
                android:inputType="number"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>


